# ==============================================
# RETRO PORTFOLIO BACKEND - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/retro_portfolio

# JWT Secret (generate a strong random string, e.g., openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Admin Password (for initial setup - will be hashed)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# Server
PORT=3001
NODE_ENV=development

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
